{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Take a Break",
  "version": "0.0.1",
  "identifier": "take.a.break",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Take a Break",
        "width": 375,
        "height": 300,
        "resizable": false,
        "maximizable": false,
        "center": true,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
